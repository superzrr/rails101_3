<div class="col-md-12">
  <div class="group">
    <%= link_to("New Group", new_group_path, class:"btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator</td>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |g| %>
        <tr>
        <td>#</td>
        <td><%= g.title %></td>
        <td><%= g.description %></td>
        <td><%= g.user.email %></td>
        <td>
          <% if current_user && current_user==g.user %>
            <%= link_to("Edit", edit_group_path(g),class:"btn btn-sm btn-default") %>
            <%= link_to("Delete" ,group_path(g),class:"btn btn-sm btn-default",method: :delete,data: { confirm:"Are you sure?"} )%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
