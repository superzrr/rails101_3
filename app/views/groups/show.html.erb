<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success">IsMember</label>
        <%= link_to("Quit Group", quit_group_path(@group),method: :post, class:"btn btn-default") %>
      <% else %>
        <label class="label label-warning">NotMember</label>
        <%= link_to("Join Group", join_group_path(@group),method: :post, class:"btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("Write a Post", new_group_post_path(@group), class:"btn btn-primary pull-right") %>
    <% if current_user && current_user==@group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>

  <h2><%= @group.title %></h2>
  <p><%= render_group_description(@group) %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Creator</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
      <tr>
        <td><%= link_to(render_post_ceonten(p), group_post_path(p.group,p)) %></td>
        <td><%= p.user.email %></td>
        <td><%= p.created_at %></td>
        <% if current_user && current_user == p.user %>
        <td><%= link_to("Edit",edit_group_post_path(p.group,p)) %></td>
        <td><%= link_to("Delete",group_post_path(p.group,p), method: :delete, data:{confirm:"Are you sure?"}) %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>

</div>
